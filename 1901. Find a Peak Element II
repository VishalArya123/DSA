class Solution {
public:
    vector<int> findPeakGrid(vector<vector<int>>& mat) {
        int rows=mat.size();
        int cols=mat[0].size();
        int low=0;
        int high=cols-1;
        while(low<=high){
            int mid=(low+high)/2;
            int max_row=0;
            for(int i=0;i<rows;i++){
                if(mat[i][mid]>mat[max_row][mid]){
                    max_row=i;
                }
            }
            int left = mid-1>=0?mat[max_row][mid-1]:-1;
            int right = mid+1<cols?mat[max_row][mid+1]:-1;
            int curr=mat[max_row][mid];

            if(curr>left && curr>right){
                return {max_row,mid};
            }
            else if(curr<left){
                high=mid-1;
            }
            else{
                low=mid+1;
            }
        }
        return {-1,-1};
    }
};