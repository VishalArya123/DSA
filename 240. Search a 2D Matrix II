class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int rows=matrix.size();
        int cols=matrix[0].size();
        int init_row=0;
        int init_col=cols-1;
        while(init_row<rows && init_col>=0){
            if(matrix[init_row][init_col]==target) return true;
            else if(matrix[init_row][init_col]>target) init_col-=1;
            else init_row+=1;
        }
        return false;
    }
};