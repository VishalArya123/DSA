class Solution {
public:

    bool searchNumber(vector<int>& row,int target){
        int n=row.size();
        int low=0;
        int high=n;
        while(low<=high){
            int mid=(low+high)/2;
            if(row[mid]==target) return true;
            else if(row[mid]<target){
                low=mid+1;
            }
            else{
                high=mid-1;
            }
        }
        return false;
    }

    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int rows=matrix.size();
        int cols=matrix[0].size();
        for(int i=0;i<rows;i++){
            if(target>=matrix[i][0] && target<=matrix[i][cols-1]){
                return searchNumber(matrix[i],target);
            }
        }
        return false;
    }
};